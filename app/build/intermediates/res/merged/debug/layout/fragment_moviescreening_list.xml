<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/screenings_recycler"
        android:name="com.michaelsvit.kolnoa.MovieScreeningsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.michaelsvit.kolnoa.MovieScreeningsFragment"
        tools:listitem="@layout/fragment_moviescreening" />

    <TextView android:id="@+id/movie_screenings_empty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_screenings_this_day"
        android:textColor="@color/textColorPrimary"
        android:textSize="24sp"
        android:visibility="gone"/>

</LinearLayout>